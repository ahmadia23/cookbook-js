<%- include("includes/head.ejs") %>
<title><%= pageTitle %></title>
</head>

<%- include("includes/navigation.ejs") %>
<h1 class="text-center"> <%if(editing){%>Coucou Edit Recipe<%}else {%>Coucou Add Recipe<%};%></h1>
<form action="<%if (editing){%>/cookbooks/<%=cookbook.id%>/edit-recipe/<%=recipe.id%><%} else {%>/cookbooks/<%=cookbook.id%>/add-recipe<%}%>"  method ="POST" class="col-6 offset-3" enctype="multipart/form-data">
  <div class="form-group my-3">
    <label for="recipeTitle" enct>Name of the recipe</label>
    <input type="text" class="form-control" id="recipeTitle" aria-describedby="emailHelp" placeholder="Enter name" name="name"  value="<% if (editing) { %><%= recipe.name %><% } %>">
  </div>
  <div class="form-group my-3">
    <label for="Description">Description</label>
    <input type="text" class="form-control" placeholder="Description" name="description"  value="<% if (editing) { %><%= recipe.description %><% } %>">
  </div>
  <div class="form-group my-3">
    <label for="recipeTime">Preparation Time</label>
    <input type="text" class="form-control" id="recipeTime" name="time"  value="<% if (editing) { %><%= recipe.time %><% } %>">
  </div>
  <div class="form-group my-3">
    <label for="imageRecipe">Image Url</label>
    <input type="file" class="form-control" id="imageRecipe" name="image">
  </div>
  <% if (editing) { %>
    <input type="hidden" value="<%= recipe.id %>" name="id">
  <% } %>
  <button type="submit" class="btn btn-primary"><% if (editing) { %>Update Recipe<% } else { %>Add Recipe<% } %></button>
</form>

<%- include("includes/end.ejs") %>
