<%- include("includes/head.ejs") %>
<title> Cookbook's recipes</title>
</head>

<%- include("includes/navigation.ejs") %>
<h1 class="text-center">Welcome to the <%=cookbook.name%></h1>
<div class="container">
  <h2>view all the recipes</h2>
  <div class="recipes">
    <% if (recipes.length > 0) { %>
      <% for(let recipe of recipes){ %>
        <div class="card-product">
          <h2 class="text-center"> <%=recipe.name%></h2>
          <img src="/<%= recipe.imageUrl%>" />
          <div class="card-product-infos">
            <p> <%= recipe.description%></p>
            <p>Preparation time:  <%= recipe.time%>Minutes</p>
            <button class="btn btn-primary">
              <a href="/recipes/<%=recipe.id%>" class="text-white text-decoration-none"> See the full recipe </a>
            </button>
            <button class="btn btn-danger">
              <a href="/cookbooks/<%=cookbook.id%>/edit-recipe/<%=recipe.id%>?edit=true" class="text-white text-decoration-none"> Edit this recipe</a>
              <input type="hidden" name="id" value="<%=recipe.id%>">
            </button>

          </div>
        </div>
        <% }%>
        <% } else { %>
        <button class="btn btn-primary">
          <a href="/cookbooks/<%=cookbook.id%>/add-recipe" class="text-white text-decoration-none"> Add your first recipe </a>
        </button>
    <%} %>
  </div>

  <% if (goodUser) {%>
  <button class="btn btn-primary">
    <a href="/cookbooks/<%=cookbook.id%>/add-recipe" class="text-white text-decoration-none"> Add a recipe </a>
    <input type="hidden" name="id" value="<%=cookbook.id%>">
  </button>
  <% } %>
</div>
<%- include("includes/end.ejs") %>
